<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <ImageView
                android:id="@+id/im_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_free" />
            <TextView
                android:id="@+id/tv_washing_machine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เครื่องซักผ้า"
                android:textSize="14sp"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/im_photo"
                android:layout_toEndOf="@+id/im_photo"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สถานะ"
                android:textSize="14sp"
                android:layout_below="@+id/tv_washing_machine"
                android:layout_alignLeft="@+id/tv_washing_machine"
                android:layout_alignStart="@id/tv_washing_machine" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เหลือเวลาอีก"
                android:textSize="14sp"
                android:layout_below="@+id/tv_status"
                android:layout_alignStart="@+id/tv_status"
                android:layout_alignLeft="@+id/tv_status"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>