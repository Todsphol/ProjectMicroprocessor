<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextView">
        <item name="android:minWidth">500dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_marginTop">@dimen/dp4</item>
        <item name="android:layout_marginLeft">@dimen/dp8</item>
        <item name="android:layout_marginRight">@dimen/dp8</item>
        <item name="android:background">@drawable/c_selector_rectangle</item>
        <item name="android:textColor">@color/z_states_text_view_text_color</item>
    </style>
    <style name="EditText" parent="TextView">
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
    </style>
    <style name="EditTextWithStroke" parent="EditText">
        <item name="android:background">@drawable/c_stroke</item>

    </style>
    <style name="MailEditText" parent="EditText">
        <item name="android:inputType">text</item>
        <item name="android:drawableLeft">@drawable/ic_mail</item>
        <item name="android:drawableStart">@drawable/ic_mail</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/e_mail</item>
    </style>

</resources>
